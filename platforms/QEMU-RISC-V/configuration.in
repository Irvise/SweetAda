
#
# QEMU-RISC-V (QEMU emulator)
#
# RISC-V
#

# force LibGCC (__divdi3)
USE_LIBGCC := Y

# RISC-V 32
CPU                   := RISC-V
CPU_MODEL             := RV32IMAFC
# -march=rv32imafc_zicsr_zifencei -mabi=ilp32f
GCC_SWITCHES_PLATFORM += -march=rv32imafc -mabi=ilp32f
STARTUP_OBJECTS       := startup.S llkernel.S
LD_SWITCHES_PLATFORM  += -m elf32lriscv
# for runsweetada on QEMU
export RISCV32 := Y

OBJDUMP_SWITCHES_PLATFORM +=
POSTBUILD_ROMFILE         := Y
OBJCOPY_SWITCHES_PLATFORM += -O binary --gap-fill=0x00

USE_APPLICATION := test-QEMU-RISC-V

SESSION_START_COMMAND :=
SESSION_END_COMMAND   :=

RUN_COMMAND   := $(RUNSWEETADA) -k "$(SWEETADA_PATH)" -p "$(PLATFORM_DIRECTORY)" -f qemu.cfg
DEBUG_COMMAND := $(RUN_COMMAND) -d DEBUG_QEMU

