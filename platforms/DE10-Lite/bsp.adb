package body BSP is

   --========================================================================--
   --                                                                        --
   --                                                                        --
   --                           Local declarations                           --
   --                                                                        --
   --                                                                        --
   --========================================================================--

   use Interfaces;
   use DE10Lite;

   --========================================================================--
   --                                                                        --
   --                                                                        --
   --                           Package subprograms                          --
   --                                                                        --
   --                                                                        --
   --========================================================================--

   ----------------------------------------------------------------------------
   -- Console wrappers
   ----------------------------------------------------------------------------

   procedure Console_Putchar (C : in Character) is
   begin
      null;
   end Console_Putchar;

   procedure Console_Getchar (C : out Character) is
   begin
      C := Character'Val (0);
   end Console_Getchar;

   ----------------------------------------------------------------------------
   -- BSP_Setup
   ----------------------------------------------------------------------------
   procedure BSP_Setup is
   begin
      -------------------------------------------------------------------------
      declare
         Value       : Unsigned_32;
         Delay_Count : constant := 300000;
      begin
         Value := 0;
         LEDs_Dir := 16#FFFF_FFFF#;
         loop
            LEDs_IO := Value;
            for Delay_Loop_Count in 1 .. Delay_Count loop null; end loop;
            Value := Value + 1;
         end loop;
      end;
      -------------------------------------------------------------------------
   end BSP_Setup;

end BSP;
