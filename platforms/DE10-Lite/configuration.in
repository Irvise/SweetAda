
#
# DE10-Lite board
#
# Terasic DE10-Lite MAX10 10M50DAF484C7G Nios II
#

# force ZFP
RTS := zfp
PROFILE := zfp
USE_LIBADA := N

CPU := NiosII

GCC_SWITCHES_PLATFORM     :=
STARTUP_OBJECTS           := startup.S llkernel.S
LD_SWITCHES_PLATFORM      :=
OBJDUMP_SWITCHES_PLATFORM :=
POSTBUILD_ROMFILE         := Y
OBJCOPY_SWITCHES_PLATFORM := -O binary --gap-fill=0x00

export QUARTUS_PATH      := /opt/intelFPGA_lite/22.1std
export QSYS_PROJECT_PATH := /root/workspace/hardware/Altera_DE10-Lite/DE10-Lite_base_design
export QSYS_FILENAME     := $(QSYS_PROJECT_PATH)/de10lite.qsys
export QSYS_SOF_FILENAME := $(QSYS_PROJECT_PATH)/output_files/DE10-Lite.sof
export QSYS_IO_LIST      := leds switches

USE_APPLICATION := test-DE10-Lite

ifeq ($(USE_PYTHON),Y)
SESSION_START_COMMAND := "$(PYTHON)" "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/programmer.py -jtagd
SESSION_END_COMMAND   :=
RUN_COMMAND           := "$(PYTHON)" "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/programmer.py
DEBUG_COMMAND         :=
else
SESSION_START_COMMAND := "$(TCLSH)" "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/programmer.tcl -jtagd
SESSION_END_COMMAND   :=
RUN_COMMAND           := "$(TCLSH)" "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/programmer.tcl
DEBUG_COMMAND         :=
endif

