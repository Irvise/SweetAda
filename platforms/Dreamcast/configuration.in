
#
# Dreamcast (GXemul emulator)
#
# SH7750 LE
#

# force ZFP
RTS := zfp
PROFILE := zfp
USE_LIBADA := N

CPU       := SuperH
CPU_MODEL := SH7750

GCC_SWITCHES_PLATFORM     += -m4 -Wa,--isa=sh4
LD_SWITCHES_PLATFORM      +=
OBJDUMP_SWITCHES_PLATFORM +=
POSTBUILD_ROMFILE         := Y
OBJCOPY_SWITCHES_PLATFORM += --output-target=binary --pad-to=0x00200000 --gap-fill=0x00

ADDITIONAL_OBJECTS += roto serial video

#ROM_BOOT := Y
#export ROM_BOOT
CDROM_BOOT := Y
export CDROM_BOOT
#NETWORK_BOOT := Y
#export NETWORK_BOOT

ifeq ($(NETWORK_BOOT),Y)
GXEMUL := N
else
GXEMUL := Y
endif
export GXEMUL

USE_APPLICATION := test-Dreamcast

SESSION_START_COMMAND :=
SESSION_END_COMMAND   :=

ifeq ($(ROM_BOOT),Y)
RUN_COMMAND   := runsweetada$(EXEEXT) -k "$(SWEETADA_PATH)" -p "$(PLATFORM_DIRECTORY)" -f gxemul.cfg
else ifeq ($(CDROM_BOOT),Y)
RUN_COMMAND   := runsweetada$(EXEEXT) -k "$(SWEETADA_PATH)" -p "$(PLATFORM_DIRECTORY)" -f gxemul.cfg
else ifeq ($(NETWORK_BOOT),Y)
RUN_COMMAND   := "$(TCLSH)" "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/bba.tcl
endif
DEBUG_COMMAND := $(RUN_COMMAND)

