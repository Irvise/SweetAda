
#
# Taihu PPC405EP board (QEMU emulator)
#

CPU       := PowerPC
CPU_MODEL := PPC405

# -msdata=eabi
GCC_SWITCHES_PLATFORM     += -mcpu=405 -meabi -msoft-float -Wa,-mregnames
STARTUP_OBJECTS           := startup.S llkernel.S
LD_SWITCHES_PLATFORM      +=
OBJDUMP_SWITCHES_PLATFORM +=
POSTBUILD_ROMFILE         := Y
OBJCOPY_SWITCHES_PLATFORM += -O binary --gap-fill=0x00

export USE_QEMU_IOEMU := False

USE_APPLICATION := test-Taihu

SESSION_START_COMMAND :=
SESSION_END_COMMAND   :=

# plain QEMU
RUN_COMMAND   := "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/qemu$(SCREXT)
DEBUG_COMMAND := "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/qemu$(SCREXT) -debug
