
#
# QEMU-AVR (QEMU emulator)
#
# AVR ATmega328P
#

CPU       := AVR
CPU_MODEL := ATMEGA328P

GCC_SWITCHES_PLATFORM     += -mmcu=atmega328p -Wa,-mmcu=atmega328p
LD_SWITCHES_PLATFORM      += -m avr5
OBJDUMP_SWITCHES_PLATFORM +=
POSTBUILD_ROMFILE         := N
OBJCOPY_SWITCHES_PLATFORM += --output-target=binary --gap-fill=0x00

# override standard core unit
IMPLICIT_CORE_UNITS := $(filter-out core,$(IMPLICIT_CORE_UNITS))
export IMPLICIT_CORE_UNITS

USE_APPLICATION := dummy

SESSION_START_COMMAND :=
SESSION_END_COMMAND   :=

RUN_COMMAND   := runsweetada$(EXEEXT) -k "$(SWEETADA_PATH)" -p "$(PLATFORM_DIRECTORY)" -f qemu.cfg
DEBUG_COMMAND := $(RUN_COMMAND) -d DEBUG_QEMU

