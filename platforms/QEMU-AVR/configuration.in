
#
# QEMU-AVR (QEMU emulator)
#
# AVR ATmega328P
#

# force ZFP
RTS := zfp
PROFILE := zfp
USE_LIBADA := N

CPU       := AVR
#CPU_MODEL := ATMEGA128A
CPU_MODEL := ATMEGA328P

#GCC_SWITCHES_PLATFORM     := -mmcu=atmega128a -Wa,-mmcu=atmega128a
#LD_SWITCHES_PLATFORM      := -m avr51
GCC_SWITCHES_PLATFORM     := -mmcu=atmega328p -Wa,-mmcu=atmega328p
LD_SWITCHES_PLATFORM      := -m avr5
STARTUP_OBJECTS           := startup.S llkernel.S
OBJDUMP_SWITCHES_PLATFORM :=
POSTBUILD_ROMFILE         := Y
OBJCOPY_SWITCHES_PLATFORM := -O binary --gap-fill=0x00

USE_APPLICATION := test-QEMU-AVR

SESSION_START_COMMAND :=
SESSION_END_COMMAND   :=

RUN_COMMAND   := "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/qemu$(SCREXT)
DEBUG_COMMAND := "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/qemu$(SCREXT) -debug

