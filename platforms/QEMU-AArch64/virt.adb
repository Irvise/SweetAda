   ----------------------------------------------------------------------------
   -- Timer_Reload
   ----------------------------------------------------------------------------
   procedure Timer_Reload is
   begin
      ARMv8A.CNTP_TVAL_EL0_Write ((
                                   TimerValue => ARMv8A.CNTFRQ_EL0_Read.Clock_frequency / 1_000,
                                   others     => <>
                                  ));
   end Timer_Reload;

end Virt;
