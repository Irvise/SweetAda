
#
# QEMU-AArch64 (QEMU emulator)
#

CPU       := AArch64
CPU_MODEL := Cortex-A53

# -mabi=ilp32
GCC_SWITCHES_PLATFORM     += -mcpu=cortex-a53 -mabi=ilp32
LD_SWITCHES_PLATFORM      += -m aarch64elf32
# -mabi=lp64 (default)
#GCC_SWITCHES_PLATFORM     += -mcpu=cortex-a53 -mabi=lp64
#LD_SWITCHES_PLATFORM      +=
OBJDUMP_SWITCHES_PLATFORM +=
POSTBUILD_ROMFILE         := Y
OBJCOPY_SWITCHES_PLATFORM += --output-target=binary

USE_APPLICATION := test-QEMU-AArch64

SESSION_START_COMMAND :=
SESSION_END_COMMAND   :=

RUN_COMMAND   := runsweetada$(EXEEXT) -k "$(SWEETADA_PATH)" -p "$(PLATFORM_DIRECTORY)" -f qemu.cfg
DEBUG_COMMAND := $(RUN_COMMAND) -d DEBUG_QEMU

