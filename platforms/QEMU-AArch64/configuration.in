
#
# QEMU-AArch64 (QEMU emulator)
#

CPU       := AArch64
CPU_MODEL := Cortex-A53

ABI := lp64
#ABI := ilp32

ifeq ($(ABI),lp64)
#
# -mabi=lp64 (default)
#
GCC_SWITCHES_PLATFORM     += -mcpu=cortex-a53 -mabi=lp64
LD_SWITCHES_PLATFORM      += --undefined=el_table
else ifeq ($(ABI),ilp32)
#
# -mabi=ilp32
#
GCC_SWITCHES_PLATFORM     += -mcpu=cortex-a53 -mabi=ilp32
LD_SWITCHES_PLATFORM      += -m aarch64elf32 --undefined=el_table
endif

STARTUP_OBJECTS           := startup.S llkernel.S
OBJDUMP_SWITCHES_PLATFORM +=
POSTBUILD_ROMFILE         := Y
OBJCOPY_SWITCHES_PLATFORM += -O binary

export USE_QEMU_IOEMU := False

USE_APPLICATION := test-QEMU-AArch64

SESSION_START_COMMAND :=
SESSION_END_COMMAND   :=

RUN_COMMAND   := "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/qemu$(SCREXT)
DEBUG_COMMAND := "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/qemu$(SCREXT) -debug

