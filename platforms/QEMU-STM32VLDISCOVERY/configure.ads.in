
with Definitions;

package Configure
   with Pure => True
   is

   use Definitions;

   -- PLATFORM and CPU definitions
   PLATFORM  : constant String := "QEMU-STM32VLDISCOVERY";
   CPU       : constant String := "@CPU@";
   CPU_MODEL : constant String := "@CPU_MODEL@";

   -- basic configuration parameters
   SYSCLK_FREQUENCY : constant := 24 * MHz1; -- QEMU
   TICK_FREQUENCY   : constant := 1 * kHz1;

   -- IOEMU
   USE_QEMU_IOEMU : constant Boolean := @USE_QEMU_IOEMU@;

end Configure;
