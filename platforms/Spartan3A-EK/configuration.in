
#
# Spartan 3A-EK
#
# MicroBlaze v7.00.b BE, XC3S400AFT256-4
#

# force ZFP
RTS := zfp
PROFILE := zfp
USE_LIBADA := N

CPU := MicroBlaze

GCC_SWITCHES_PLATFORM     := -mcpu=v7.00.b
STARTUP_OBJECTS           := startup.S llkernel.S
LD_SWITCHES_PLATFORM      := --undefined=vectors --no-warn-rwx-segments
OBJDUMP_SWITCHES_PLATFORM :=
POSTBUILD_ROMFILE         :=
OBJCOPY_SWITCHES_PLATFORM :=

USE_APPLICATION := test-Spartan3A-EK

# Xilinx ISE
XILINX_PATH  := /opt/XilinxISE/14.7/ISE_DS
# top-level directory of the project
PROJECT_PATH := /root/workspace/hardware/Xilinx_Spartan-3A_EK/Spartan_3A_Eval_Test_Source_v92
# device part
DEVICE       := xc3s400aft256-4
# communication port
COMMPORT     := /dev/ttyACM0

SESSION_START_COMMAND :=
SESSION_END_COMMAND   :=

RUN_COMMAND   := "$(TCLSH)" "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/programmer.tcl \
                   -b "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/download.bit         \
                   -c $(COMMPORT)
DEBUG_COMMAND := $(RUN_COMMAND)

