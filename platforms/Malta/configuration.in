
#
# Malta board (QEMU emulator)
#
# MIPS BE
#

CPU       := MIPS
#CPU_MODEL := MIPS32-24K
CPU_MODEL := MIPS64-5K

ifeq      ($(CPU_MODEL),MIPS32-24K)
GCC_SWITCHES_PLATFORM     += -march=24kf
OBJDUMP_SWITCHES_PLATFORM += --disassembler-options=hwr-names=mips32r2,msa=mips32r2
else ifeq ($(CPU_MODEL),MIPS64-5K)
GCC_SWITCHES_PLATFORM     += -march=5kc
endif

STARTUP_OBJECTS           := startup.S llkernel.S
LD_SWITCHES_PLATFORM      +=
POSTBUILD_ROMFILE         := Y
OBJCOPY_SWITCHES_PLATFORM += -O binary --gap-fill=0x00

USE_APPLICATION := test-Malta

export USE_QEMU_IOEMU := False

SESSION_START_COMMAND :=
SESSION_END_COMMAND   :=

# plain QEMU
RUN_COMMAND   := "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/qemu$(SCREXT)
DEBUG_COMMAND := "$(SWEETADA_PATH)"/$(PLATFORM_DIRECTORY)/qemu$(SCREXT) -debug
