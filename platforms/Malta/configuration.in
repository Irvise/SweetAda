
#
# Malta board (QEMU emulator)
#
# MIPS BE
#

CPU       := MIPS
#CPU_MODEL := MIPS32-24K
CPU_MODEL := MIPS64-5K

ifeq ($(CPU_MODEL),MIPS32-24K)
GCC_SWITCHES_PLATFORM     += -march=24kf -Wa,-march=24kf
LD_SWITCHES_PLATFORM      +=
OBJDUMP_SWITCHES_PLATFORM += --disassembler-options=hwr-names=mips32r2,msa=mips32r2
endif
ifeq ($(CPU_MODEL),MIPS64-5K)
GCC_SWITCHES_PLATFORM     += -march=5kc -Wa,-march=5kc
LD_SWITCHES_PLATFORM      +=
OBJDUMP_SWITCHES_PLATFORM +=
endif
GCC_SWITCHES_PLATFORM     +=
POSTBUILD_ROMFILE         := Y
OBJCOPY_SWITCHES_PLATFORM += --output-target=binary --gap-fill=0x00

USE_APPLICATION := test-Malta

SESSION_START_COMMAND :=
SESSION_END_COMMAND   :=

RUN_COMMAND   := $(RUNSWEETADA) -k "$(SWEETADA_PATH)" -p "$(PLATFORM_DIRECTORY)" -f qemu.cfg
DEBUG_COMMAND := $(RUN_COMMAND) -d DEBUG_QEMU

