
#
# PC-x86-64 configuration file (floppy disk boot version)
#

CPU       := x86-64
CPU_MODEL := ???

GCC_SWITCHES_PLATFORM     += -m64 -mno-red-zone
# __FIX__ QEMU problems (movdqa instruction)
GCC_SWITCHES_PLATFORM     += -mno-sse
STARTUP_OBJECTS           := startup.S llkernel.S
GCC_SWITCHES_STARTUP      += -DMODE32 -DMODE64 -DENABLE_A20 -DDATA_RELOC
LD_SWITCHES_PLATFORM      +=
OBJDUMP_SWITCHES_PLATFORM +=
POSTBUILD_ROMFILE         := Y
OBJCOPY_SWITCHES_PLATFORM += -O binary --gap-fill=0x00
CLEAN_OBJECTS_COMMON      += pcbootfd.dsk

export KERNEL_STACK_SIZE := 4096

USE_APPLICATION := test-PC-x86-64

SESSION_START_COMMAND :=
SESSION_END_COMMAND   :=

RUN_COMMAND   := $(RUNSWEETADA) -k "$(SWEETADA_PATH)" -p "$(PLATFORM_DIRECTORY)" -f qemu-ioemu.cfg
DEBUG_COMMAND :=

