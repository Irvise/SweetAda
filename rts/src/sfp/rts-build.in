
NOCOPY_FILES+=("s-parame.ads")

log_echo "%" "copying rts-common files"
copy_rts_files . "${ADAINCLUDE}" || exit $?

log_echo "%" "generating: ${ADAINCLUDE}/s-parame.ads"
cat s-parame.ads.in | sed \
  -e "s|@RUNTIME_DEFAULT_SEC_STACK_SIZE@|${RUNTIME_DEFAULT_SEC_STACK_SIZE}|" \
  -e "s|@SEC_STACK_DYNAMIC@|${SEC_STACK_DYNAMIC}|" \
  > "${ADAINCLUDE}"/s-parame.ads
if [ "${OSTYPE}" = "msys" ] ; then
  d2u.exe "${ADAINCLUDE}"/s-parame.ads
fi

