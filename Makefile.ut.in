#
# Environment variables:
# OSTYPE
# SWEETADA_PATH
# LIBUTILS_DIRECTORY
# SCREXT
#

CREATECONFIGUREGPR := "$(SWEETADA_PATH)"/$(LIBUTILS_DIRECTORY)/createconfiguregpr$(SCREXT)
CREATEDEFINITIONS  := "$(SWEETADA_PATH)"/$(LIBUTILS_DIRECTORY)/createdefinitions$(SCREXT)
CREATEGNATADC      := "$(SWEETADA_PATH)"/$(LIBUTILS_DIRECTORY)/creategnatadc$(SCREXT)
CREATESYMLINK      := "$(SWEETADA_PATH)"/$(LIBUTILS_DIRECTORY)/createsymlink$(SCREXT)
FILEPAD            := "$(SWEETADA_PATH)"/$(LIBUTILS_DIRECTORY)/filepad$(SCREXT)
FILEPATCH          := "$(SWEETADA_PATH)"/$(LIBUTILS_DIRECTORY)/filepatch$(SCREXT)
PROCESSCFG         := "$(SWEETADA_PATH)"/$(LIBUTILS_DIRECTORY)/processcfg$(SCREXT)

ifeq ($(OSTYPE),cmd)
CREATECONFIGUREGPR := $(subst /,\,$(CREATECONFIGUREGPR))
CREATEDEFINITIONS  := $(subst /,\,$(CREATEDEFINITIONS))
CREATEGNATADC      := $(subst /,\,$(CREATEGNATADC))
CREATESYMLINK      := $(subst /,\,$(CREATESYMLINK))
FILEPAD            := $(subst /,\,$(FILEPAD))
FILEPATCH          := $(subst /,\,$(FILEPATCH))
PROCESSCFG         := $(subst /,\,$(PROCESSCFG))
endif

