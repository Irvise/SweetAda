   ----------------------------------------------------------------------------
   -- Run
   ----------------------------------------------------------------------------
   procedure Run is
   begin
      -------------------------------------------------------------------------
      if True then
         declare
            Delay_Count : constant := 5_000_000;
         begin
            loop
               MPC8306.GP1DAT := 16#0000_0200#;
               for Delay_Loop_Count in 1 .. Delay_Count loop CPU.NOP; end loop;
               MPC8306.GP1DAT := 16#0000_0000#;
               for Delay_Loop_Count in 1 .. Delay_Count loop CPU.NOP; end loop;
            end loop;
         end;
      end if;
      -------------------------------------------------------------------------
      loop null; end loop;
      -------------------------------------------------------------------------
   end Run;

end Application;
