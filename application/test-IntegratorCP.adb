
with Interfaces;
with IntegratorCP;
with IOEMU;

package body Application is

   --========================================================================--
   --                                                                        --
   --                                                                        --
   --                           Local declarations                           --
   --                                                                        --
   --                                                                        --
   --========================================================================--

   use Interfaces;

   --========================================================================--
   --                                                                        --
   --                                                                        --
   --                           Package subprograms                          --
   --                                                                        --
   --                                                                        --
   --========================================================================--

   ----------------------------------------------------------------------------
   -- Run
   ----------------------------------------------------------------------------
   procedure Run is
   begin
      -------------------------------------------------------------------------
      if True then
         IOEMU.IOEMU_IO1 := 16#00#;
         loop
            while IntegratorCP.Timer (1).RIS.RTI = False loop null; end loop;
            IntegratorCP.Timer (1).IntClr := 0;
            -- IOEMU GPIO test
            IOEMU.IOEMU_IO1 := @ + 1;
            IOEMU.IOEMU_IO0 := 16#FF#;
            IOEMU.IOEMU_IO0 := 16#00#;
         end loop;
      end if;
      -------------------------------------------------------------------------
      loop null; end loop;
      -------------------------------------------------------------------------
   end Run;

end Application;
