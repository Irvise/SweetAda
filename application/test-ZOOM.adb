
with CPU;
with MCF5373;
with ZOOM;

package body Application is

   --========================================================================--
   --                                                                        --
   --                                                                        --
   --                           Package subprograms                          --
   --                                                                        --
   --                                                                        --
   --========================================================================--

   ----------------------------------------------------------------------------
   -- Run
   ----------------------------------------------------------------------------
   procedure Run is
   begin
      -------------------------------------------------------------------------
      if True then
         MCF5373.PAR_TIMER  := 16#3F#;
         MCF5373.PDDR_TIMER := 16#08#;
         MCF5373.PODR_TIMER := 16#00#;
         loop
            for Delay_Loop_Count in 1 .. 500_000 loop CPU.NOP; end loop;
            ZOOM.LED := 16#FFFF#;
            for Delay_Loop_Count in 1 .. 500_000 loop CPU.NOP; end loop;
            ZOOM.LED := 0;
         end loop;
      end if;
      -------------------------------------------------------------------------
      loop null; end loop;
      -------------------------------------------------------------------------
   end Run;

end Application;
